doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/explore.css")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    <meta name="description" content="Jolly Jingles App" />
    <meta name="title" property="og:title" content="Jolly Jingles" />
    <meta property="og:type" content="Website" />
    <meta name="image" property="og:image" content="https://res.cloudinary.com/dzi47txgs/image/upload/v1648172204/portfolio_screenshot_jolly-jingles_ghkeuk.jpg" />
    <meta name="description" property="og:description" content="Jolly Jingles App" />
    <meta name="author" content="_" />
    title=title
  body
    include nav-bar.pug
    div(class='jingles-container')
      div(class='jingles-grid')
        if !jingles.length
          p#no-jingles-found No jingles found!
        each jingle in jingles
          div(class="jingle")
            a(id="nameText" href=`/jingles/${jingle.id}`)
              img(src=jingle.image id="jinglepic")
            a(id="nameText" href=`/jingles/${jingle.id}`)=jingle.name
            p(id="artistText")= jingle.artist
            div.stars-container
              if (!jingle.avgRating || isNaN(jingle.avgRating))
               span(class="stars" style="--rating: 0")
              else
                span(class="stars" style=`--rating:${jingle.avgRating}`)
                p=jingle.avgRating
    include footer.pug
