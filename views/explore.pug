doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="/stylesheets/explore.css")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title=title
  body
    nav(class='navbar')

      div(id="center-container")
        a(class='jollyjingle-logo' href='/') jollyjingle
      if user
        a(href='/users/'+user.id+'/jingleLists') My Jingles
      if !user
        a(href='users/sign-up') My Jingles
        input(type="text", name="Search", placeholder= "Search books")
      div(id="right-container")
      if user
        p welcome
          strong  #{user.name}
        a(href='users/sign-out') Sign out
      if !user
        a(href='users/sign-in') Sign in
        a(href='users/sign-up') Sign up
    div(class='jingles-container')
      div(class='jingles-grid')
        each jingle in jingles
          div(class="jingle")
            img(src=jingle.image id="jinglepic")
            a(id="nameText" href=`/jingles/${jingle.id}`)=jingle.name
            p(id="artistText")= jingle.artist
            p= jingle.avgRating
    include footer.pug
