doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/explore.css")
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title=title
  body
    header
      include nav-bar.pug
    div(class='jingles-container')
      div(class='jingles-grid')
        each jingle in jingles
          div(class="jingle")
            img(src=jingle.image id="jinglepic")
            a(id="nameText" href=`/jingles/${jingle.id}`)=jingle.name
            p(id="artistText")= jingle.artist
            if (jingle.avgRating === null || isNaN(jingle.avgRating))
              p="Be the first to review"
            else
              p=jingle.avgRating
    include footer.pug
